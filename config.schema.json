{
  "pluginAlias": "OpenSesame",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "name": {
      "type": "string",
      "title": "Name",
      "description": "This name will be used at history page on Sesame.app",
      "default": "Open Sesame",
      "required": true
    },
    "apiKey": {
      "title": "API Key",
      "type": "string",
      "required": true,
      "x-schema-form": {
        "type": "password"
      }
    },
    "locks": {
      "title": "Sesame Locks",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "title": "Name",
            "type": "string"
          },
          "uuid": {
            "title": "UUID",
            "description": "UUID can be found at Sesame app.",
            "type": "string",
            "required": true
          },
          "secret": {
            "title": "KEY Secret",
            "description": "Key Secret. Can be retreived at https://sesame-qr-reader.vercel.app",
            "type": "string",
            "required": true,
            "x-schema-form": {
              "type": "password"
            }
          }
        }
      }
    },
    "updateInterval": {
      "title": "Status update interval second",
      "description": "Update device status second. Greater than 60(sec) is recommended",
      "type": "integer",
      "required": true,
      "default": 60,
      "minimum": 10,
      "maximum": 600
    },
    "webhookPort": {
      "title": "port for webhook server",
      "description": "Leave blank if wehook server is not needed",
      "type": "integer",
      "required": false
    },
    "clientID": {
      "title": "Client ID",
      "description": "CLIENT_ID at https://dash.candyhouse.co",
      "type": "string",
      "required": false
    }
  },
  "layout": [
    {
      "type": "fieldset",
      "title": "Common settings",
      "items": [
        "name",
        "apiKey",
        "clientID"
      ]
    },
    {
      "type": "fieldset",
      "title": "Sesame Locks",
      "expandable": true,
      "expanded": true,
      "buttonText": "Add Locks",
      "key": "locks",
      "items": [
        "locks[].name",
        "locks[].uuid",
        "locks[].secret"
      ]
    },
    {
      "type": "fieldset",
      "title": "Advanced",
      "expandable": true,
      "expanded": false,
      "items": [
        "updateInterval",
        "webhookPort"
      ]
    }
  ]
}
